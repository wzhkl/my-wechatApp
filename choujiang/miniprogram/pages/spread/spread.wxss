/* miniprogram/pages/spread/spread.wxss */
@import "../../style/common.wxss";
.page {
  width: 100%;
  height: 100%;
}
.container {
  width: 100%;
  padding: 60rpx 20rpx;
}
.header {
  width: 100%;
}
.title {
  margin-bottom: 40rpx;
}
.title, .text, .card-content, .brand text {
  font-size: 14px;
  opacity: 0.7;
}
.cooperation {
  background-color: #ffffff;
  display: flex;
  padding: 40rpx 60rpx;
  border-radius: 6rpx;
}
.sponsor {
  border-left: 1px solid #e5e5e5;
  border-right: 1px solid #e5e5e5;
  margin:0 30rpx;
  padding:0 30rpx;
}
.item {
  flex: 1;
  text-align: center;
}
.text {
  margin-bottom: 40rpx;
}
.num {
  font-size: 18px;
  font-weight: bold;
}
.body {
  margin: 60rpx 0;
}
.card {
  background-color: #ffffff;
  padding: 40rpx 40rpx;
  border-radius: 6rpx;
  margin-bottom: 20rpx;
}
.card-title {
  margin-bottom: 40rpx;
}
.card-content {
  display: -webkit-box;
  -webkit-box-orient:vertical;
  text-overflow: ellipsis;
  overflow:hidden;
}
.ellipsis{
  -webkit-line-clamp: 1;
}
.unellipsis{
  -webkit-line-clamp:0;
}
.content {
  background-color: #ffffff;
  padding: 20rpx 20rpx;
}
.card-title text {
  font-size: 16px;
  font-weight: bold;
}
.card-title image {
  width: 40rpx;
  height: 40rpx;
  vertical-align:middle;
}
.img {
  width: 100%;
  text-align: center;
}
.img image {
  width: 30rpx;
  height: 30rpx;
}
.footer {
  width: 100%;
} 
.brands {
  display: flex;
  flex-wrap: wrap;
}
.icon image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
}
.brand {
  margin: 20rpx 30rpx;
  text-align: center;
}