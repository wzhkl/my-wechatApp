/* miniprogram/pages/participate/participate.wxss */
@import '../../style/common.wxss';

.page, .container {
  width: 100%;
  height: 100%;
}
.top, .middle, .bottom, .ad {
  width: 100%;
}
.top {
  background-color: #ffffff;
}
.middle {
  margin: 30rpx 0rpx;
  padding: 20rpx 20rpx;
  background-color: #fff7e5;
}
.middle image {
  width: 30rpx;
  height: 30rpx;
  margin-left: 30rpx;
}
.text {
  font-size: 16px;
  text-align: center;
}
.bottom {
  background-color: #ffffff;
  padding: 40rpx 60rpx;
  margin-bottom: 40rpx;
}
.participate {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background-color: #cc3923;
  line-height: 200rpx;
  text-align: center;
  margin:0 auto;
  color:#ffffff;
}
.participator {
  font-size: 14px;
  opacity: 0.7;
  display:flex;
  align-items:center;
  justify-content:center;
  margin: 20rpx 0;
}
.participator image {
  width: 30rpx;
  height: 30rpx;
}
.share {
  width: 100%;
  position: fixed;
  bottom: 0;
  z-index: 100;
  background-color:#fff;
  text-align:center;
}
.initiate {
  height: 70rpx;
  line-height: 70rpx;
  background-color: #575757;
  font-size: 16px;
  text-align: center;
  color: white;
  margin: 20rpx;
  border-radius: unset;
}
.share .text {
  width: 100%;
  text-align: center;
  color: #575757;
  opacity: 0.7;
  font-size: 12px;
  margin-bottom: 20rpx;
}

.sponsor {
    font-size: 14px;
    color: #c51f05;
}
.header {
    /* height: 147rpx; */
    padding: 20rpx 0;
    text-align: center;
}
.header image {
  height:300rpx;
  width:300rpx;
