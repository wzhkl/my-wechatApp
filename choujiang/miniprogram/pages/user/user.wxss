/* miniprogram/pages/user/user.wxss */
page {
  width: 100%;
  height: 100%;
  background-color: #f0f0f0;
}
.page, .container {
  font-size: 32rpx;
}
.header {
  width: 100%;
  padding: 20rpx;
  background-color: #ffffff;
  margin-bottom: 20rpx;
}
.header-top {
  display: flex;
  margin-bottom: 40rpx;
  padding-bottom: 10rpx;
  border-bottom: 1px solid #e5e5e5;
  box-sizing: border-box;
  align-items:center;
  /* position: relative; */
}
button {
  background-color: #fff;
  position:relative;
  top:10rpx;
}
.button-hover {
  background-color: #fff;
}
button::after{
  border: none;
}
.username {
  margin-left: 10rpx;
  position: relative;
  bottom: 30rpx;
}
.wish {
  margin-bottom: 20rpx;
  color: #b67e3e;
  position: relative;
  flex: 1;
}
.wishInner {
  position: relative;
  left: 270rpx;
}
.userInfo image {
  width: 100rpx;
  height: 100rpx;
  border-radius:50%;
}
.wish image {
  width: 30rpx;
  height: 30rpx;
}
.header-bottom {
  width: 100%;
  margin-bottom: 20rpx;
  display: flex;
}
.header-bottom-item {
  flex: 1;
  text-align: center;
}
.allDrawNum, .launchNum, .winningNum {
  margin-bottom: 10rpx;
}
.launch {
  border-left: 1px solid #e5e5e5;
  border-right: 1px solid #e5e5e5;
}
.txt {
  font-size: 24rpx;
  opacity: 0.6;
}
.body {
  width: 100%;
}
.case {
  display: flex;
  align-items: center;
  background-color: #ffffff;
  position:relative;
  padding: 20rpx;
}
.case image {
  width: 40rpx;
  height: 40rpx;
  vertical-align:bottom;
}
.left {
  text-align: center;
}
.right {
  flex: 1;
  position: absolute;
  right: 0;
}
.right .describe {
  opacity: 0.6;
}
.officialMall, .advanced, .recommend, .more {
  border-top: 1px solid #e5e5e5;
  margin-bottom: 20rpx;
}
.peopleNum {
  text-align: center;
  font-size: 24rpx;
  opacity: 0.6;
}

