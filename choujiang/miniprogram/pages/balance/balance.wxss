/* miniprogram/pages/balance/balance.wxss */
@import "../../style/common.wxss";

.page {
  width: 100%;
  height: 100%;
}
.header {
  width: 100%;
  height: 100%;
  padding: 20rpx 0;
}
.balance {
  background-color: #fff;
  padding: 60rpx 0rpx;
  text-align:center;
}
.title {
  font-size: 16px;
  opacity: 0.7;
}
.num {
  font-size: 30px;
  font-weight: bold;
  margin-top: 30rpx;
}
.body {
  padding: 0 20rpx;
}
.details {
  font-size: 14px;
  opacity: 0.7;
  margin-bottom: 20rpx;
}
.goPublic {
  color: #ffffff;
  background-color: #d15242;
  padding: 20rpx 0;
  text-align: center;
}
.trade {
  background-color: #ffffff;
  padding: 20rpx 0;
  text-align: center;
  margin-top: 20rpx;
}
.bottom {
  width: 100%;
  position: absolute;
  bottom: 0;
  font-size: 14px;
  opacity: 0.7;
  text-align:center;
}
.bottom button {
  color: #38709e;
  font-size: 14px;
  display:inline;
  padding: 0;
  background-color:#f0f0f0;
}
button::after{
  border:none;
}
